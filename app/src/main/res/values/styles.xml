<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Spinner theme. -->
    <style name="SpinnerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <!-- Edit theme. -->
    <!--<style name="EditTextTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/body_text_1</item>
        <item name="android:textColorSecondary">@color/body_text_1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/body_text_1</item>
    </style>-->

    <style name="PreferencesTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/body_text_1</item>
        <item name="android:textColorSecondary">@color/body_text_2</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="BorderlessButtonStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_gray_color</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width"> 1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">#ffe1e1e1</item>
    </style>

    <style name="DividerHorizontal" parent="DividerVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Text" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SmallText" parent="Text">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="SmallText.Bold">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText.ExtraSmall">
        <item name="android:textSize">@dimen/extra_small_text</item>
    </style>

    <style name="SmallText.ExtraSmall.Light">
        <item name="android:textSize">@dimen/extra_small_text</item>
        <item name="android:textColor">@color/body_text_3</item>
    </style>

    <style name="SmallText.ExtraSmall.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallText.ExtraSmall.White.Bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="Text">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextMedium.Secondary">
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="TextMedium.Blue">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextMedium.SmallAction" >
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextMedium.SmallAction.White" parent="TextMedium.SmallAction">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextMedium.SmallAction.Light" parent="TextMedium.SmallAction">
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="TextLarge" parent="Text">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextLarge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLarge.SmallAction" >
        <item name="android:textSize">@dimen/text_size_large_small_action</item>
    </style>

    <style name="TextLarge.SmallAction.White">
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>

    <style name="TextLarge.SmallAction.Green">
        <item name="android:textColor">@color/text_green</item>
    </style>

    <style name="TextExtraLarge" parent="Text">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="TextExtraLarge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextExtraLarge.White.Bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall" parent="Text">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextSmall.Light" >
        <item name="android:textColor">@color/body_text_3</item>
    </style>

    <style name="TextSmall.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Description" parent="Text">
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingRight">@dimen/view_padding</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:maxHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonGreen" parent="ButtonStyle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreen.Small" parent="ButtonGreen">
        <item name="android:maxHeight">36dp</item>
        <item name="android:textSize">@dimen/text_size_large_small_action</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/button_green_small_selector</item>
    </style>

</resources>