<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
    android:baselineAligned="false">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_vertical">

        <ImageView
                android:id="@android:id/icon"
                android:contentDescription="@string/desc"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_communication_messenger"/>

        <TextView
                android:id="@+id/contactMessageCount"
                style="@style/SmallText.ExtraSmall.White.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                tools:text="1"/>

    </FrameLayout>
    
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
                android:id="@+id/tradeType"
                style="@style/TextLarge.SmallAction.Green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Online Trade - $7000 ARS"
                android:singleLine="false"/>

        <TextView
                android:id="@+id/tradeDetails"
                style="@style/TextMedium.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="With ThanksMister in Buenos Aires"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/contactDate"
                    style="@style/TextMedium.SmallAction.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    tools:text="11/23/99"/>

            <TextView
                    android:id="@+id/contactId"
                    style="@style/TextMedium.SmallAction.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:gravity="right"
                    android:layout_weight="1"
                    tools:text="#559595"/>

        </LinearLayout>

    </LinearLayout>

  
</LinearLayout>
